<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/mensajeInicial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/botonNavegar"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Ir a la pantalla 2"
        android:onClick="irPantalla2"/>

    <Button
        android:id="@+id/botonNavegar3"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Ir a la pantalla 3"
        android:onClick="irPantalla3"/>

    <Button
        android:id="@+id/boton_cambio"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:text="Cambiar" />


</LinearLayout>